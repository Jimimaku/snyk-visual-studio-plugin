<UserControl x:Class="Snyk.VisualStudio.Extension.UI.SnykToolWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Background="{DynamicResource VsBrush.Window}"
             Foreground="{DynamicResource VsBrush.WindowText}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Name="SnykToolWindow">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="1" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" UseLayoutRounding="False" ScrollViewer.CanContentScroll="True" CanHorizontallyScroll="True" CanVerticallyScroll="True">
            <DataGrid x:Name="resultsDataGrid" ItemsSource="{Binding}" UseLayoutRounding="False" Padding="1" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Margin="5,5,3,5" RenderTransformOrigin="0,0.5">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Title" Binding="{Binding title}"/>
                    <DataGridTextColumn Header="Version" Binding="{Binding version}"/>
                    <DataGridTextColumn Header="Severity" Binding="{Binding severity}"/>
                    <DataGridTextColumn Header="Module Name" Binding="{Binding moduleName}"/>
                    <DataGridTextColumn Header="Description" Binding="{Binding description}"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</UserControl>
